{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Adapters Metadata Schema",
  "type": "object",
  "required": [
    "$schema",
    "id",
    "name",
    "description",
    "keywords",
    "version",
    "authors",
    "repo",
    "homepage",
    "offline_ready"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "repo": {
      "type": "string",
      "format": "uri"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "offline_ready": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
